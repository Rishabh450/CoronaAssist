<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/border_margin"
        android:paddingBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/icon_request_passes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Request Passes"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_groceries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Groceries and Essentials"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_milk_and_dairy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Milk and Dairy"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_bread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Bread"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_gas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Gas"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Water"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />

        <Button
            android:id="@+id/icon_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_margin"
            android:background="@drawable/home_btn_shape"
            android:gravity="center"
            android:text="Medical Supplies"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text_color" />
    </LinearLayout>
</ScrollView>
